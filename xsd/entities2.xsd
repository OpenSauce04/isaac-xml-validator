                    <xs:attribute name="sound_baby" type="xs:unsignedByte" use="optional" />
                    <xs:attribute name="dust" type="xs:unsignedByte" use="optional" />
                    <xs:attribute name="rock" type="xs:unsignedByte" use="optional" />
                    <xs:attribute name="sound_bone" type="xs:unsignedByte" use="optional" />
                    <xs:attribute name="poop" type="xs:unsignedByte" use="optional" />
                  </xs:complexType>
                </xs:element>
                <xs:element name="preload">
                  <xs:complexType>
                    <xs:attribute name="id" type="xs:unsignedShort" use="required" />
                    <xs:attribute name="variant" type="xs:unsignedByte" use="required" />
                    <xs:attribute name="subtype" type="xs:unsignedByte" use="optional" />
                  </xs:complexType>
                </xs:element>
                <xs:element maxOccurs="unbounded" name="preload-snd">
                  <xs:complexType>
                    <xs:attribute name="id" type="xs:unsignedShort" use="required" />
                  </xs:complexType>
                </xs:element>
              </xs:choice>
            </xs:sequence>
            <xs:attribute name="anm2path" type="xs:string" use="required" />
            <xs:attribute name="baseHP" type="xs:decimal" use="required" />
            <xs:attribute name="boss" type="xs:unsignedByte" use="required" />
            <xs:attribute name="champion" type="xs:unsignedByte" use="required" />
            <xs:attribute name="collisionDamage" type="xs:decimal" use="required" />
            <xs:attribute name="collisionMass" type="xs:unsignedShort" use="required" />
            <xs:attribute name="collisionRadius" type="xs:unsignedByte" use="required" />
            <xs:attribute name="friction" type="xs:decimal" use="required" />
            <xs:attribute name="id" type="xs:unsignedShort" use="required" />
            <xs:attribute name="name" type="xs:string" use="required" />
            <xs:attribute name="numGridCollisionPoints" type="xs:unsignedByte" use="required" />
            <xs:attribute name="shadowSize" type="xs:unsignedByte" use="required" />
            <xs:attribute name="stageHP" type="xs:decimal" use="optional" />
            <xs:attribute name="variant" type="xs:unsignedByte" use="required" />
            <xs:attribute name="tags" type="xs:string" use="optional" />
            <xs:attribute name="collisionInterval" type="xs:unsignedByte" use="optional" />
            <xs:attribute name="subtype" type="xs:unsignedByte" use="optional" />
            <xs:attribute name="bossID" type="xs:unsignedByte" use="optional" />
            <xs:attribute name="portrait" type="xs:unsignedShort" use="optional" />
            <xs:attribute name="gridCollision" type="xs:string" use="optional" />
            <xs:attribute name="hasFloorAlts" type="xs:boolean" use="optional" />
            <xs:attribute name="reroll" type="xs:boolean" use="optional" />
            <xs:attribute name="shutdoors" type="xs:boolean" use="optional" />
            <xs:attribute name="shieldStrength" type="xs:unsignedByte" use="optional" />
            <xs:attribute name="collisionRadiusYMulti" type="xs:decimal" use="optional" />
            <xs:attribute name="gibAmount" type="xs:unsignedByte" use="optional" />
            <xs:attribute name="gibFlags" type="xs:string" use="optional" />
          </xs:complexType>
        </xs:element>
      </xs:sequence>
      <xs:attribute name="anm2root" type="xs:string" use="required" />
      <xs:attribute name="version" type="xs:unsignedByte" use="required" />
    </xs:complexType>
  </xs:element>
</xs:schema>
            <xs:sequence minOccurs="0">
              <xs:choice maxOccurs="unbounded">
                <xs:element name="bestiary">
                  <xs:complexType>
                    <xs:attribute name="anim" type="xs:string" use="optional" />
                    <xs:attribute name="transform" type="xs:string" use="optional" />
                    <xs:attribute name="overlay" type="xs:string" use="optional" />
                    <xs:attribute name="anm2path" type="xs:string" use="optional" />
                    <xs:attribute name="parent" type="xs:decimal" use="optional" />
                    <xs:attribute name="alt" type="xs:string" use="optional" />
                  </xs:complexType>
                </xs:element>
                <xs:element name="gibs">
                  <xs:complexType>
                    <xs:attribute name="amount" type="xs:unsignedByte" use="required" />
                    <xs:attribute name="blood" type="xs:unsignedByte" use="required" />
                    <xs:attribute name="bone" type="xs:unsignedByte" use="required" />
                    <xs:attribute name="eye" type="xs:unsignedByte" use="required" />
                    <xs:attribute name="gut" type="xs:unsignedByte" use="required" />
                    <xs:attribute name="large" type="xs:unsignedByte" use="required" />
